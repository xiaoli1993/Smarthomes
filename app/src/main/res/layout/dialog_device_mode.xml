<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@drawable/bg_mode_coners">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"> 

        <TextView
            android:id="@+id/tx_mode_home"
            style="@style/text_device_mode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/bg_mode_center_home"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/tx_mode_office"
            style="@style/text_device_mode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/bg_mode_center_out"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/tx_mode_sleep"
            style="@style/text_device_mode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/bg_mode_center_sleep"
            android:text="@string/app_name" />
    </LinearLayout>
</RelativeLayout>