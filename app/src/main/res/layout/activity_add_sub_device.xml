<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.nuowei.smarthome.view.scan.RadarScanView
            android:id="@+id/radarScanView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true" />

        <com.nuowei.smarthome.view.scan.RandomTextView
            android:id="@+id/randomTextView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <com.nuowei.smarthome.view.button.StateButton
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dip"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:text="@string/confirm"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:normalBackgroundColor="@color/blue_dark"
        app:pressedBackgroundColor="@color/blue_dark"
        app:radius="10dp"
        app:unableBackgroundColor="@android:color/holo_red_light" />
</LinearLayout>