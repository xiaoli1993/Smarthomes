<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_pass"
    android:gravity="center"
    android:orientation="vertical">
    <!--
     android:elevation="1dip"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/image_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7.3dp"
            android:layout_marginTop="8.6dp"
            android:src="@drawable/main_alarm"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:src="@drawable/home_device" />
    </RelativeLayout>

    <com.nuowei.smarthome.view.textview.AvenirTextView
        android:id="@+id/tv_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="25dip"
        android:layout_marginTop="10.6dip"
        android:gravity="center"
        android:text="device"
        android:textColor="@color/text_title"
        android:textSize="13.6dp" />
</LinearLayout>