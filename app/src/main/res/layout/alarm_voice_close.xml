<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp" 
    android:background="@color/alpha"
    >
    <RelativeLayout 
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true">
    <ImageView 
        android:id="@+id/alarming"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/alarming_close"/>
    <ImageView 
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_img_alarm_close_voice"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"/>
    <ProgressBar
        android:id="@+id/progress_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@anim/progress_blue"
        style="?android:attr/progressBarStyleLarge" 
        android:indeterminateDuration="560000"
         />
    </RelativeLayout>

</RelativeLayout>
