<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item"
    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/iv_alarm_pictrue"
        android:layout_width="144dp"
        android:layout_height="81dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/alarm_default"
        android:scaleType="fitXY"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp">
        <TextView 
            android:id="@+id/allarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-06-29 09:24:47"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_alarm_record_size"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical">
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                 <TextView
                    android:id="@+id/mm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/allarm_robot"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/text_alarm_record_size"
                    />

                 <TextView
                    android:id="@+id/robot_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11939"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/text_alarm_record_size"
                    />
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                 <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/allarm_type"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/text_alarm_record_size"
                     />

                 <TextView
                    android:id="@+id/allarm_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Motion Detection"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/text_alarm_record_size"
                    />
            </LinearLayout>
            </LinearLayout>
             <TextView
                android:id="@+id/allarm_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="aaaï¼šaaa"
                android:visibility="visible"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_alarm_record_size"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
