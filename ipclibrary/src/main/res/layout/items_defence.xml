<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white" >
                <RelativeLayout 
                    android:id="@+id/rl_timelayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="21dp"
                    android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tx_begintime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/text_color_black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/horizontal_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/tx_begintime"
                    android:text="-"
                    android:textColor="@color/text_color_black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tx_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/horizontal_line"
                    android:text="00:00"
                    android:textColor="@color/text_color_black"
                    android:textSize="20sp" />
                </RelativeLayout>

                <com.jwkj.widget.SwitchView
                    android:id="@+id/df_sw_btn"
                    android:layout_width="42dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="21.5dp"
                    android:layout_marginTop="13.5dp"
                    android:visibility="visible" />
            </RelativeLayout>

            <com.jwkj.widget.ExDefenceLinerLayout
                android:id="@+id/df_ell_mode"
                android:layout_width="match_parent"
                android:layout_height="53.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:background="@color/white" >

                <com.jwkj.widget.scedueView
                    android:id="@+id/df_sv_mode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.jwkj.widget.ExDefenceLinerLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>