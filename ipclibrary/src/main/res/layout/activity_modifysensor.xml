<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fish_back"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/btn_back_title_white" />

        <TextView
            android:id="@+id/tx_title"
            style="@style/title_textview_style"
            android:text="@string/add_device"
            android:textColor="@color/text_color_black" />

        <View
            android:layout_alignParentBottom="true"
            style="@style/view_line"/>
    </RelativeLayout>

    <View
        style="@style/view_line"
        android:layout_marginTop="@dimen/fragment_margin_top" />

    <ExpandableListView
        android:id="@+id/elv_sensor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">

    </ExpandableListView>
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:text="@string/yes"
        android:background="@drawable/bg_button_selelitdia" />

</LinearLayout>