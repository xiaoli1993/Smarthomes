<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/dialog_lay_widht"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/corner_bg_white"
              android:orientation="vertical"
    >
    <TextView
        android:id="@+id/et_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="@string/password_error"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_set"
        />
    <TextView
        android:id="@+id/tx_device_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="2dp"
        android:text="ID : 1976666"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_set"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="236dp"
        android:layout_height="33dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangular_blue_frame"
        android:gravity="left|center_vertical"
        android:hint="@string/input_password"
        android:inputType="textPassword"
        android:maxLength="30"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="21dp"
        android:background="@color/gray_input_pwd_dialog"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tx_cancel"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/bg_tv_input"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_input_pwd_dialog"/>

        <TextView
            android:id="@+id/tx_ok"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/bg_btn_blue"/>
    </LinearLayout>
</LinearLayout>