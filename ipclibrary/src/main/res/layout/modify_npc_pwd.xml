<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/tab_bar"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/back_btn"
            style="@style/button_back_title_white"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/modify_device_password"
            android:textColor="@color/white"
            android:textSize="@dimen/modify_password_title_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/save"
            android:layout_width="@dimen/tab_btn_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/tab_btn_margin"
            android:background="@drawable/tab_button"
            android:text="@string/save"
            android:textColor="@drawable/tab_button_text_color"
            android:textSize="@dimen/text_save_size" />
    </RelativeLayout>
    <TextView  
        android:id="@+id/tv_weak_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_left_right_margin"
        android:layout_marginRight="@dimen/item_left_right_margin"
        android:layout_marginTop="@dimen/item_group_margin_top"
        android:text="@string/weak_password"
        android:textColor="@color/text_color_red"
        android:textSize="@dimen/text_size_normal"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height"
        android:layout_marginLeft="@dimen/item_left_right_margin"
        android:layout_marginRight="@dimen/item_left_right_margin"
        android:layout_marginTop="@dimen/item_group_margin_top"
        android:background="@drawable/corner_tiao_single_bg" >

        <EditText
            android:id="@+id/old_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/inner_margin_left"
            android:layout_marginRight="@dimen/inner_margin_right"
            android:background="#00000000"
            android:gravity="left|center_vertical"
            android:hint="@string/input_old_device_pwd"
            android:inputType="textPassword"
            android:singleLine="true"
            android:text=""
            android:maxLength="30"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_small_edit" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height"
        android:layout_marginLeft="@dimen/item_left_right_margin"
        android:layout_marginRight="@dimen/item_left_right_margin"
        android:layout_marginTop="@dimen/item_group_margin_top"
        android:background="@drawable/corner_tiao_single_bg" >

        <EditText
            android:id="@+id/new_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/inner_margin_left"
            android:layout_marginRight="@dimen/inner_margin_right"
            android:background="#00000000"
            android:gravity="left|center_vertical"
            android:hint="@string/input_new_device_pwd"
            android:inputType="textPassword"
            android:singleLine="true"
            android:text=""
            android:maxLength="30"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_small_edit" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height"
        android:layout_marginLeft="@dimen/item_left_right_margin"
        android:layout_marginRight="@dimen/item_left_right_margin"
        android:layout_marginTop="@dimen/item_group_margin_top"
        android:background="@drawable/corner_tiao_single_bg" >

        <EditText
            android:id="@+id/re_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/inner_margin_left"
            android:layout_marginRight="@dimen/inner_margin_right"
            android:background="#00000000"
            android:gravity="left|center_vertical"
            android:hint="@string/input_re_new_device_pwd"
            android:inputType="textPassword"
            android:singleLine="true"
            android:text=""
            android:maxLength="30"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_small_edit" />
    </RelativeLayout>

    <com.jwkj.widget.MyPassLinearLayout
        android:id="@+id/ll_p"
        style="@style/ll_my_pas" >
    </com.jwkj.widget.MyPassLinearLayout>

</LinearLayout>